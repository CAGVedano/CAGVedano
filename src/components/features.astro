---
import { Icon } from 'astro-icon'
import { ActivityAreas } from '../activities'

const features = ActivityAreas;
---

<div class="py-12 bg-gray-100 dark:bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <h2
        class="text-base text-primary-900 dark:text-primary-300 font-semibold tracking-wide uppercase"
      >
        Le nostre attività
      </h2>
      <p
        class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl"
      >
        Aree di intervento
      </p>
      <p
        class="mt-4 max-w-2xl text-xl text-gray-600 dark:text-gray-300 lg:mx-auto"
      >
        Far diventare collettivo il progetto individuale.
      </p>
      <p
        class="max-w-2xl text-xl text-gray-600 dark:text-gray-300 lg:mx-auto"
      >
        Far sentire all'individuo di esse parte di un progetto collettivo.
      </p>
    </div>

    <div class="mt-10">
      <dl
        class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10 mx-auto"
      >
        {
          features.map(feature => (
            <div class="relative">
              <dt>
                <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-primary-500 dark:bg-primary-300 text-white dark:text-black">
                  <Icon
                    class="h-6 w-6"
                    aria-hidden="true"
                    pack="heroicons-outline"
                    name={feature.icon}
                  />
                </div>
                <p class="ml-16 text-lg leading-6 font-medium text-gray-900 dark:text-gray-200">
                  {feature.name}
                </p>
              </dt>
              <dd class="mt-2 ml-16 text-base text-gray-600 dark:text-gray-400">
                <a class="text-primary-500 hover:text-secondary-500 dark:text-primary-300 dark:hover:text-secondary-300" href={`/doc/${feature.slug}`}>Scopri di più</a>
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</div>
